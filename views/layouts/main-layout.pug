include ../mixins/mixins

doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0, user-scalable=no")
        title #{pageTitle}
        link(href='https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.9/cropper.min.css', rel='stylesheet')
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3', crossorigin='anonymous')
        link(rel="stylesheet", href="/css/main.css")
    body 
        script. 
            var userLoggedIn = !{userLoggedInJs};

        .wrapper 
            .row 
                .col-2.extra-space
                nav.col-2
                    a.blue(href="/") 
                        i.fas.fa-dove
                    a(href="/", class=typeof classActive === "undefined" || classActive !== "home" ? undefined : "active") 
                        i.fas.fa-home
                    a(href="/search/posts" class=typeof classActive === "undefined" || classActive !== "search" ? undefined : "active") 
                        i.fas.fa-search
                    a(href="/notifications" class=typeof classActive === "undefined" || classActive !== "notifications" ? undefined : "active") 
                        i.fas.fa-bell
                        span#notificationBadge
                    a(href="/messages" class=typeof classActive === "undefined" || classActive !== "messages" ? undefined : "active") 
                        i.fas.fa-envelope
                        span#messagesBadge
                    a(href="/profile" class=typeof classActive === "undefined" || classActive !== "profile" ? undefined : "active") 
                        i.fas.fa-user
                    a(href="/logout") 
                        i.fas.fa-sign-out-alt    
                .mainSectionContainer.col-10.col-md-8.col-lg-6
                    .titleContainer 
                        input.checkbox(type="checkbox", name="")
                        .hamburger-lines 
                            span.line.line1
                            span.line.line2
                            span.line.line3
                        h1 #{pageTitle}
                        block headerButton 
                    block content
                .d-none.d-md-block.col-2.col-lg-4

        #notificationList

        script(src='https://kit.fontawesome.com/aeb3c8896e.js', crossorigin='anonymous')
        script(src='https://code.jquery.com/jquery-3.6.0.min.js', integrity='sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=', crossorigin='anonymous')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.9/cropper.min.js')
        script(src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js', integrity='sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB', crossorigin='anonymous')
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js', integrity='sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13', crossorigin='anonymous')
        script(src='https://cdn.socket.io/4.5.0/socket.io.min.js', integrity='sha384-7EyYLQZgWBi67fBtVxw60/OWl1kjsfrPFcaU0pp0nAh+i8FD068QogUvg85Ewy1k', crossorigin='anonymous')


        block scripts 
        
        script(src="/js/lib/localstore.js") 
        script(src="/js/lib/swiped-events.js") 

        script(src="/js/common.js") 
        script(src="/js/clientSocket.js") 

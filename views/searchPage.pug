extends layouts/main-layout.pug

block content 

    .searchBarContainer 
        i.fas.fa-search 
        input#searchBox(type="search", name="searchBox", data-search=selectedTab, placeholder="Search for users or posts")

    .tabsContainer 
        +createTab("Posts", `/search/posts`, selectedTab != "users")
        +createTab("Users", `/search/users`, selectedTab == "users")

    .resultsContainer

    +createPostModals(userLoggedIn)
        
block scripts
    script(src="/js/searchPage.js") 